<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
     android:scrollbars="vertical" 
     android:layout_height="fill_parent" 
     android:layout_width="fill_parent">

<LinearLayout 
    android:orientation="vertical" 
    android:id="@+id/payer_layout"
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent">

    <TextView
        android:text="@string/payer"
        android:textSize="18px"
        android:paddingBottom="6dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_height="4dip"
        android:background="#FF909090" 
        android:layout_marginBottom="6dip"
        android:layout_width="fill_parent"/>

    <TextView 
        android:text="@string/full_name" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/full_name"
        android:inputType="text" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/email" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/cell_phone" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/cell_phone"
        android:inputType="number" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/identification_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/payer_identification_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_payer_rg"
            android:checked="false"
            android:text="@string/rg" />
        <RadioButton
            android:id="@+id/radio_payer_cpf"
            android:checked="false"
            android:text="@string/cpf" />
    </RadioGroup>

    <TextView 
        android:text="@string/identification_number" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/payer_identification_number"
        android:inputType="date" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/address"
        android:textSize="18px"
        android:paddingBottom="6dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_height="4dip"
        android:background="#FF909090" 
        android:layout_marginBottom="6dip"
        android:layout_width="fill_parent"/>

    <TextView 
        android:text="@string/street_address" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/street_address"
        android:inputType="text" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/street_number" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/street_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/street_complement" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/street_complement"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/neighborhood" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/neighborhood"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/city" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
            
    <TextView 
        android:text="@string/state" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Spinner 
        android:id="@+id/state"
        android:prompt="@string/choose_state"
        android:layout_column="2"
        android:entries="@array/state_array" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/zip_code" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/zip_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView 
        android:text="@string/fixed_phone" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/fixed_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_height="4dip"
        android:background="#FF909090" 
        android:layout_marginBottom="6dip"
        android:layout_marginTop="6dip"
        android:layout_width="fill_parent"/><!--
    <Button
         android:layout_gravity="center"
         android:text="@string/next_step"
         android:id="@+id/payer_next_step" 
         android:paddingBottom="6dip"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"/>

--></LinearLayout>
</ScrollView>